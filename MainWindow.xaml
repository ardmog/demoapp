<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1200">
    <Grid>
        <StackPanel>
            <Button Height="60" Content="Call GC" Click="ButtonBase_OnClick3"></Button>
            <Button Height="60" Content="32 Bit UC" Click="ButtonBase_OnClick4"></Button>
            <Button Height="60" Content="24 Bit UC" Click="ButtonBase_OnClick5"></Button>
            <Button Height="60" Content="Take Screenshot" Click="ButtonBase_OnClick6"></Button>
            <Button Height="60" Content="Unload UC" Click="ButtonBase_OnClick2"></Button>
        </StackPanel>
        <StackPanel>
            <ContentControl x:Name="UCContentControl" Margin="0,360,0,0"></ContentControl>
        </StackPanel>
    </Grid>
</Window>
